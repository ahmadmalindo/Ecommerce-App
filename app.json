{
  "expo": {
    "name": "MySalon",
    "slug": "my-salon",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/ic_app.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./src/assets/images/ic_splash_screen.png",
      "resizeMode": "contain",
      "backgroundColor": "#EE51A5"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.layana.mysalon"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/ic_app_adaptive.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.layana.mysalon"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow MySalon to use your location to determine the closest distance to mysalon at your current location."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends.",
          "cameraPermission": "Allow MySalon to access your camera to let user change profile picture."
        }
      ]
    ]
  }
}
